<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vms="clr-namespace:DBViewer.ViewModels"
             x:DataType="vms:DatabaseBrowserViewModel"
             x:Class="DBViewer.Views.DatabaseBrowserPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame Margin="0,-20,0,0"
                   BackgroundColor="{DynamicResource ColoredBackgroundMediumColor}"
                   Padding="30"
                   CornerRadius="20"
                   HasShadow="False">
                <StackLayout BackgroundColor="{DynamicResource ColoredBackgroundMediumColor}">
                    <Grid HeightRequest="80">
                        <Button Style="{DynamicResource HeaderButton}"
                                HeightRequest="40"
                                WidthRequest="60"
                                Text="Back"
                                HorizontalOptions="Start"
                                Command="{Binding BackCommand}">
                        </Button>
                        <Label Text="{Binding DatabaseName}"
                               Margin="10"
                               Style="{DynamicResource PageHeaderLabel}"
                               FontAttributes="Bold"
                               VerticalOptions="Start"
                               HorizontalOptions="CenterAndExpand" />
                    </Grid>
                    <Label Style="{DynamicResource MainBodyLabel}">
                        <Label.FormattedText>
                            <FormattedString >
                               <Span Text="Last Update: " />
                               <Span Text="{Binding DownloadTime}" />
                            </FormattedString>
                        </Label.FormattedText> 
                    </Label>
                    <StackLayout  Orientation="Horizontal">
                        <Entry Placeholder="Filter Groups { Comma,Separated,Values }"
                               HeightRequest="50"
                               HorizontalOptions="FillAndExpand"
                               Margin="30,10"
                               Text="{Binding FilterGroupText}">
                        </Entry>
                    </StackLayout>
                </StackLayout>
            </Frame>
            <CollectionView Margin="30"
                            IsGrouped="True"
                            ItemsSource="{Binding DocumentGroups}">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <StackLayout HeightRequest="60"
                                     BackgroundColor="{DynamicResource BackgroundSmokeColor}"
                                     VerticalOptions="Center"
                                     x:DataType="vms:DocumentGroupViewModel">
                            <Label Text="{Binding GroupName}" HeightRequest="60" VerticalTextAlignment="Center" Margin="15,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="Medium"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vms:DocumentViewModel">
                        <StackLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.ViewSelectedDocumentCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                      CommandParameter="{Binding .}" />
                            </StackLayout.GestureRecognizers>
                            <Frame Margin="20,0,0,0">
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding DocumentId}"
                                    VerticalTextAlignment="Center"
                                           Style="{DynamicResource DatabaseSummaryLabel}"
                                           VerticalOptions="Center" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Reload"
                    Command="{Binding ReloadCommand}"
                    Style="{DynamicResource DarkColoredButton}"
                    Margin="5"
                    CornerRadius="10"
                    HeightRequest="60"
                    FontSize="24" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>